{
  "plugins": ["source-map-support", "@babel/plugin-transform-runtime"],
  "presets": [
    ["@babel/preset-env", {
      "targets": {
        "node": "10.13.0"
      }
    }]
  ],
  "env": {
    "production": {
      "retainLines": false,
      "minified": true
    },
    "development": {
      "retainLines": true,
      "plugins": [
        "@babel/plugin-transform-runtime"
      ]
    },
    "test": {
      "retainLines": true,
      "plugins": [
        "@babel/plugin-transform-runtime",
        "istanbul"
      ]
    }
  }
}
